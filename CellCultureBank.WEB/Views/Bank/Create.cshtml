@using Microsoft.AspNetCore.Mvc.TagHelpers
@model CellCultureBank.BLL.Models.BankSecond.CreateItemOfSecondBank

@{
    ViewData["Title"] = "Создать клетку";
}

<h2>Создать клетку</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CellLine">Клеточная линия</label>
        <input asp-for="CellLine" class="form-control" />
        <span asp-validation-for="CellLine" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Origin">Происхождение</label>
        <input asp-for="Origin" class="form-control" />
        <span asp-validation-for="Origin" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfFreezing">Дата заморозки</label>
        <input asp-for="DateOfFreezing" class="form-control" type="date" />
        <span asp-validation-for="DateOfFreezing" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FrozenByFullName">Кем заморожена</label>
        <input asp-for="FrozenByFullName" class="form-control" />
        <span asp-validation-for="FrozenByFullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateOfDefrosting">Дата разморозки</label>
        <input asp-for="DateOfDefrosting" class="form-control" type="date" />
        <span asp-validation-for="DateOfDefrosting" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DefrostedByFullName">Кем разморожена</label>
        <input asp-for="DefrostedByFullName" class="form-control" />
        <span asp-validation-for="DefrostedByFullName" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Clearing" class="form-check-input" type="checkbox" />
        <label asp-for="Clearing" class="form-check-label">Отчистка</label>
        <span asp-validation-for="Clearing" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Certification" class="form-check-input" type="checkbox" />
        <label asp-for="Certification" class="form-check-label">Паспортизация</label>
        <span asp-validation-for="Certification" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Количество</label>
        <input asp-for="Quantity" class="form-control" type="number" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address">Адрес</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top: 8px;">Создать</button>
    <a asp-controller="Bank" asp-action="Index" class="btn btn-secondary" style="margin-top: 8px;">Назад</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
